= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :title, :value => @title, :placeholder => "Title"
  .field
    = f.text_field :url, :value => @url, :placeholder => "URL"
  .field
    = f.text_area :content, :rows => 3, :placeholder => "Content"
  .actions
    = f.submit 'Save', :class => "button"
