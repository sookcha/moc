= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, :value => @title
  .field
    = f.label :url
    = f.text_field :url, :value => @url
  .field
    = f.text_area :content, :rows => 3
  .actions
    = f.submit 'Save'
