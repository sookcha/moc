.left-bar
	%ul
		%header
			= link_to("/") do
				%span.item.title= "Moc"
		- if user_signed_in?
			%li
				= link_to("links") do
					%span.item= "Links"
			%li
				= link_to("feed") do
					%span.item= "Feeds"
			
			%li
				%a{:href => "/"+current_user.username}
					%span.item= "Profile"
					
			%li
				=link_to("logout", :method => "delete") do
					%span.item= "Logout"
				
		- else
			%li
				%a{:href => "login"}
					%span.item= "Login"
		
			%li
				%a{:href => "register"}
					%span.item= "Register"

.container
	%section
		%article
			=link_to("/discuss/" + @link.title) do
				%h1.title= @link.title
			=link_to(@link.url) do
				%i.icon-link
			%span.item= "Written by " + @link.user.username
			
			=link_to("/add/" + @link.id.to_s) do
				%span Read it later
			- if User.find_by_username(@link.user.username).id == current_user.id
				=link_to @link, {:confirm => 'Are you sure?', :method => :delete} do
					%span.item.delete= "Delete"
					
			.content
				%span.item.content= @link.content
		
		.comments
			%h1.title Comments
			=render @link.comments
			=render "comments/form"