.menubar
	%ul.nav
		%li
			= link_to("/") do
				%span.menuItem.title= "Moc"
		- if user_signed_in?
			%li
				= link_to("links") do
					%span.menuItem= "Links"
			%li
				= link_to("feed") do
					%span.menuItem= "Feeds"
			
			%li.right
				= link_to new_link_path do
					%span.menuItem= "New Link"
			
			%li.right
				= link_to("logout", :method => "delete") do
					%span.menuItem= "Logout"
			%li.right
				%a{:href => "me"}
					%span.menuItem= "Profile"
				
		- else
			%li.right
				%a{:href => "register"}
					%span.menuItem= "Register"
			%li.right
				%a{:href => "login"}
					%span.menuItem= "Login"

.container
	- @links.each do |link|
		- if current_user.email == link.owner
			%section
				%header
					%h1.linkTitle= link.title
					=link_to (link.url) do
						%span.url= link.url
				%article
					%p=link.content