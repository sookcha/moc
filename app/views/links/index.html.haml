.left-bar
	%ul
		%li
			%span.item.title= "Moc"
		- if user_signed_in?
			%li
				= link_to("links") do
					%span.item= "Links"
			%li
				= link_to("feed") do
					%span.item= "Feeds"
			
			%li
				= link_to("logout", :method => "delete") do
					%span.item= "Logout"
			%li
				%a{:href => current_user.username}
					%span.item= "Profile"
				
		- else
			%li
				%a{:href => "register"}
					%span.menuItem= "Register"
			%li
				%a{:href => "login"}
					%span.menuItem= "Login"

.container
	- @links.each do |link|
		%section
			%header
				%h1.linkTitle= link.title
				=link_to (link.url) do
					%span.url= link.url
			%article
				%p=link.content