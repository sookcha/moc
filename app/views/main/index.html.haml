.left-bar
	%ul
		%li
			%span.menuItem.title= "Moc"
		- if user_signed_in?
			%li
				= link_to("links") do
					%span.menuItem= "Links"
			%li
				= link_to("feed") do
					%span.menuItem= "Feeds"
			
			%li.right
				= link_to("logout", :method => "delete") do
					%span.menuItem= "Logout"
			%li.right
				%a{:href => current_user.username}
					%span.menuItem= "Profile"
				
		- else
			%li.right
				%a{:href => "register"}
					%span.menuItem= "Register"
			%li.right
				%a{:href => "login"}
					%span.menuItem= "Login"

.container
	-if user_signed_in?
		- if @allActivities == nil
			%h1="Friends' feeds."
			%p="Nothing to see here. Move along."
		- else
			- @feeds.sort.reverse.each do |activity|
				.activity
					%h3= activity.title
					%span.option.date= activity.created_at
					%span.option.url= activity.url
					%span.option.author= @followingUsers.find_by_id(activity.user_id).username
					%span.option.content= activity.content
	- else
		%p="Nothing to see here. Move along."