.menubar
	%ul.nav
		%li
			%span.menuItem.title= "Moc"
		%li
			%span.menuItem= "Links"
		%li
			%span.menuItem= "Feeds"
			
		- if user_signed_in?
			%li.right
				= link_to("logout", :method => "delete") do
					%span.menuItem= "Logout"
			%li.right
				%a{:href => "me"}
					%span.menuItem= "Profile"
				
		- else
			%li.right
				%a{:href => "register"}
					%span.menuItem= "Register"
			%li.right
				%a{:href => "login"}
					%span.menuItem= "Login"

.container
	%h1="Moc."