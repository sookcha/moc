.menubar
	%ul.nav
		%li
			= link_to("/") do
				%span.menuItem.title= "Moc"
		- if user_signed_in?
			%li
				= link_to("links") do
					%span.menuItem= "Links"
			%li
				= link_to("feed") do
					%span.menuItem= "Feeds"
			
			%li.right
				= link_to new_feed_path do
					%span.menuItem= "New Feed"
			
			%li.right
				= link_to("logout", :method => "delete") do
					%span.menuItem= "Logout"
			%li.right
				%a{:href => current_user.username}
					%span.menuItem= "Profile"
				
		- else
			%li.right
				%a{:href => "register"}
					%span.menuItem= "Register"
			%li.right
				%a{:href => "login"}
					%span.menuItem= "Login"

.container
	- @feeds.each do |feed|
		%section
			%header
				%h1.linkTitle= feed.title
				=link_to (feed.url) do
					%span.url= feed.url
			%article
				%p=feed.content
